# Application Settings
PROJECT_NAME="TwinGrid"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
SECRET_KEY="your-secret-key-here"  # Change this in production
API_V1_STR="/api/v1"
SERVER_NAME="localhost"
SERVER_HOST="http://localhost:8000"

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=twingrid
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}/${POSTGRES_DB}"

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM="HS256"

# Email
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL="noreply@twingrid.com"
EMAILS_FROM_NAME="TwinGrid"
EMAIL_RESET_TOKEN_EXPIRE_HOURS=24

# CORS (comma-separated list of origins)
BACKEND_CORS_ORIGINS='["http://localhost:3000", "http://localhost:8000"]'

# File Uploads
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="image/*,.pdf,.doc,.docx,.xls,.xlsx"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Feature Flags
ENABLE_EMAIL_VERIFICATION=False
ENABLE_RATE_LIMITING=False

# External Services
GOOGLE_MAPS_API_KEY=""
STRIPE_SECRET_KEY=""

# Monitoring
SENTRY_DSN=""

# Performance
DATABASE_POOL_SIZE=5
MAX_DATABASE_CONNECTIONS=10
DATABASE_STATEMENT_TIMEOUT=30  # seconds
