# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=twingrid
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@twingrid.com
EMAIL_TEMPLATES_DIR=./app/email-templates

# Redis
REDIS_URL=redis://redis:6379/0

# First Superuser (will be created on first run)
FIRST_SUPERUSER_EMAIL=admin@twingrid.com
FIRST_SUPERUSER_PASSWORD=changeme
FIRST_SUPERUSER_FULL_NAME=Admin

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_V1_STR=/api/v1
PROJECT_NAME=TwinGrid
PROJECT_DESCRIPTION="Industrial Platform API"
PROJECT_VERSION=0.1.0

# Sentry (optional)
SENTRY_DSN=

# Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_DIR=./uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_RATE_LIMITING=true

# Security Headers
SECURE_HEADERS=true
CSP_REPORT_URI=

# API Keys (if needed)
GOOGLE_MAPS_API_KEY=

# External Services
WEATHER_API_KEY=
