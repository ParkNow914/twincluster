# Frontend Environment Variables
# Copy this file to .env.local for local development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Authentication
NEXT_PUBLIC_AUTH_TOKEN_KEY=auth_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=refresh_token
NEXT_PUBLIC_TOKEN_EXPIRY_KEY=token_expiry
NEXT_PUBLIC_REMEMBER_ME_KEY=remember_me

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# Google OAuth (if applicable)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Microsoft OAuth (if applicable)
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=your-microsoft-client-id

# Sentry (if applicable)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Other Settings
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_ENABLE_DEBUG=false
